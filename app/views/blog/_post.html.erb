<%= content_tag_for 'article', post do %>
<header>
  <h1><%= link_to_unless_current post.name, read_path(post.id) %></h1>
  <p>Posted at <%= post.created_at.iso8601 %></p>
</header>
<section>
  <%= simple_format post.body %>
</section>
<footer>
  <p><%= pluralize post.comments.count, 'comment' %></p>
</footer>
<% end %>
